                stockData = stockData + key +': '+ data.stock[key][0]['$']['data'] + ' ';
              }
                
              $('#results').append('<div class="stockData">'+stockData+'</div>');   
              
              //$("#stockData").html(JSON.stringify(data.stock));
              
              var socket = io.connect();
              
              socket.on('connect', function () {
                socket.emit('setSymbol', {symbol:$('#symbol').val()});
              });
                                                            
              socket.on('symbolTweet', function (data) {
                //alert(JSON.stringify(data));
                $('#results').append('<span class="tweet">'+data.value+'</span>');                
              });
              
            }
          }
        });
                    
        
      });