  #stock
    div Enter the stock symbol to lookup:
    div 
      input(type='text',name='symbol', id='symbol')
      input(type='submit', id='submit')
    
    
        
    div#results
        
    script(type='text/javascript')
      $("#submit").click(function() {
      
        $("#results").html();
        
        var data = {};
        data.symbol = $('#symbol').val();
        
        $.ajax({
          type: 'POST', 
          data: JSON.stringify(data),
          contentType: 'application/json',
          url: '/get_stock_data',
          beforeSend: function () {
            $("#results").html("Validating Symbol...");
          },
          success: function(data) {
            if('Error invalid stock symbol' == data.value){
              $("#results").html("Invalid Symbol. Please enter a different stock smybol.");
            }else{
              $("#results").html(data.value);
              
              
